@model IEnumerable<QA.Resources.BasketItem>



<h2>Contents Of Basket</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemTotal)
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>
                @Html.DisplayFor(modelItem => item.Name)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.ID)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Quantity)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.ItemTotal)
            </th>



            <td>
                @Html.ActionLink("Adjust Quantity", "AdjustQuantity", new { id = item.ID })
                @Html.ActionLink("Remove", "Remove", new { id = item.ID })
                 
            </td>
        </tr>
    }

</table>

